<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_2sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">


           <LinearLayout
               android:layout_weight="1.7"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:weightSum="4"
               android:gravity="center"
               android:orientation="vertical"
               >

               <TextView
                   android:id="@+id/tv_drname"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textColor="#19685C"
                   android:textSize="@dimen/_13ssp"
                   android:layout_marginLeft="@dimen/_6sdp"
                   android:text="Professor Dr. Amit Kuamr guha"/>

               <TextView
                   android:id="@+id/tv_drDesignation"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="#19685C"
                   android:textSize="@dimen/_13ssp"
                   android:layout_marginLeft="@dimen/_6sdp"
                   android:text="MBBS, FCPS (Medicine),MD (Neuro),PhD (India),FRCP (Edin),Fellow (Interventional Neurology"/>

               <TextView
                   android:id="@+id/tv_drExpertise"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textColor="#19685C"
                   android:textSize="@dimen/_13ssp"
                   android:layout_marginLeft="@dimen/_6sdp"
                   android:text="Neuromedicine "/>

               <TextView
                   android:id="@+id/tv_drMedicalcollege"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="#19685C"
                   android:textStyle="bold"
                   android:textSize="@dimen/_13ssp"
                   android:layout_marginLeft="@dimen/_6sdp"
                   android:text="Dhaka Medical College and Hospital "/>


           </LinearLayout>

            <ImageView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:src="@drawable/arrow2"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>