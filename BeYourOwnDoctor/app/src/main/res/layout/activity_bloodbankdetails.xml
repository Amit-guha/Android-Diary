<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    android:weightSum="2"
    tools:context=".bloodbankdetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:background="#19685C"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_bloodbank"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_1sdp"
            app:cardElevation="@dimen/_2sdp"
            android:src="@drawable/doctor"
            />

        <TextView
            android:id="@+id/tv_bloodbankname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="Contact Name"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:fontFamily="@font/amaranth_bold" />


        <TextView
            android:id="@+id/tv_bloodbankaddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/bani"
            android:textColor="#fff"
            android:textSize="@dimen/_15ssp"
            app:fontFamily="@font/amarante" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="#E9EBEE">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="Mobile Number "
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="italic" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/Tv_conactFirstnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="01734229096"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:id="@+id/Img_callMedical"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="-3dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_toStartOf="@+id/Img_msg"
                        android:layout_toLeftOf="@+id/Img_msg"
                        android:src="@drawable/callid" />

                    <ImageView
                        android:id="@+id/Img_msg"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="13dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mesageid" />

                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>


</LinearLayout>