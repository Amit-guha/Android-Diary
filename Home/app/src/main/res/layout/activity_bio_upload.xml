<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".BioUpload">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <!---Address-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:background="#E9EBEE">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.7"
                    android:text="Address :"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/Et_Filename"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.3"
                    android:hint="Your Address"
                    android:textSize="16sp"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!---End Address-->


        <!---Cost-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:background="#E9EBEE">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Monthly Cost :  "
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

                <EditText
                    android:id="@+id/Et_vara"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="5dp"
                    android:hint="Monthly cost"
                    android:layout_weight="1"
                    android:gravity="center"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!---Cost End-->
        <!---Gender-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:background="#E9EBEE">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="Gender :  "
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <RadioGroup
                    android:id="@+id/RadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="@dimen/_14ssp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Female"
                        android:textSize="@dimen/_14ssp" />

                </RadioGroup>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!---Gender End-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:background="#E9EBEE">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Moible No :  "
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/Et_Mobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:hint="Mobile Number"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <!---End of Fast half-->


    <!--Start with Second half-->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:scaleType="fitXY"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/Btn_Choosefile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/_2sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/amaranth_bold"
                android:background="@drawable/custombutton3"
                android:text="Choose File" />


            <Button
                android:id="@+id/btn_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:background="@drawable/custombutton3"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/amaranth_bold"
                android:layout_marginRight="@dimen/_2sdp"
                android:textAllCaps="false"
                android:text="Upload" />

            <Button
                android:id="@+id/tv_showdata"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custombutton3"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/amaranth_bold"
                android:textAllCaps="false"
                android:text="Show upload" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>